pipeline {
    agent {
        label "unity"
    }

    environment {
        AUTH_MAD = credentials('auth_mad')
        AUTH_CRASHINATOR = credentials('auth_crashinator')
        KEYCHAIN_PASSWORD = credentials('keychain_password')
        PROJ_PATH = "Build"
        UNITY_PROJ_NAME = "Project"
        CLEAN_PARAMS = env.CLEAN_BUILD == "true" ? "-dfx" : "-df"
        MOBILEPKGTOOLS_LOGFILE = "buildlog.txt"
        MOBILEPKGUNITY_CONFIG = "${env.CONFIG}"
        MOBILEPKGUNITY_PLATFORM = "${env.PLATFORM}"
        MOBILEPKGUNITY_CACHEDISABLED = env.UNITY_CACHE_ENABLED == "false"
        MOBILEPKGBUILD_APPLEPROVISIONUPDATE = env.APPLE_PROVISION_UPDATE == "true"
        MOBILEPKGDEPLOY_CRASH_DISABLED = env.CONFIG == 'Debug'
    }

    stages {

        stage("Update git") {
            steps {
                sh "export"
                sh "git clean ${env.CLEAN_PARAMS}"
                sh "git reset --hard"
                sh "git submodule foreach --recursive git clean ${env.CLEAN_PARAMS}"
                sh "git submodule foreach --recursive git reset --hard"
                sh "git submodule update --recursive --init"
            }
        }

        stage("Prepare project") {
            steps {
                sh "mobilepkgbuild ${env.PROJ_PATH} --clean"
                sh "mobilepkgunity ${env.UNITY_PROJ_NAME} ${env.PROJ_PATH} --prepare"
                sh "mobilepkgdeploy mad prepare ${env.PROJ_PATH}"
            }
        }

        stage("Generate project") {
            steps {
                sh "mobilepkgunity ${env.UNITY_PROJ_NAME} ${env.PROJ_PATH}"
            }
        }

        stage("Build project") {
            steps {
                sh "mobilepkgbuild ${env.PROJ_PATH}"
            }
        }

        stage("Submission Checks") {
            steps {
                sh "mobilepkgcheck ${env.PROJ_PATH} -v"
            }
        }

        stage("Upload to Crashinator") {
            steps {
                sh "mobilepkgdeploy crash run ${env.PROJ_PATH}"
            }
        }

        stage("Upload to MAD") {
            steps {
                sh "mobilepkgdeploy mad run ${env.PROJ_PATH}"
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: "${env.MOBILEPKGTOOLS_LOGFILE}", allowEmptyArchive: true
            // android
            archiveArtifacts artifacts: "${env.PROJ_PATH}/*/build/outputs/apk/*.apk", allowEmptyArchive: true
            archiveArtifacts artifacts: "${env.PROJ_PATH}/*/build/intermediates/jniLibs/*/*/*.so", allowEmptyArchive: true
            // ios
            archiveArtifacts artifacts: "${env.PROJ_PATH}/pkg/*/*/*/*.ipa", allowEmptyArchive: true
            archiveArtifacts artifacts: "${env.PROJ_PATH}/pkg/*/*/*.xcarchive/dSYMs/*.app.dSYM.zip", allowEmptyArchive: true
            // macos
            archiveArtifacts artifacts: "${env.PROJ_PATH}/pkg/*/*/*/*.app.zip", allowEmptyArchive: true
            // windows
            archiveArtifacts artifacts: "${env.PROJ_PATH}/*.zip", allowEmptyArchive: true
        }

        failure {
            sh "mobilepkgdeploy result run --failure ${env.PROJ_PATH}"
        }

        success {
            sh "mobilepkgdeploy result run --success ${env.PROJ_PATH}"
        }
    }
}
